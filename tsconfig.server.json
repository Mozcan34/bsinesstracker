{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist/server",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "bundler",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules"]
} 